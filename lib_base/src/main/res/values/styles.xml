<resources>

    <style name="DialpadSpaceStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">3</item>
    </style>

    <style name="tiny_text">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="small_text">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="medium_text">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="normal_text">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="large_text">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="edit_AlertDialog_style" parent="android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="toggle_button_style">
        <item name="android:button">@null</item>
        <item name="android:textOff">@null</item>
        <item name="android:textOn">@null</item>
    </style>

    <style name="image_button_style">
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="radio_button_style">
        <item name="android:button">@null</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/blue</item>
    </style>


    <style name="option_list_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
